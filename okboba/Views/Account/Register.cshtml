@model okboba.Web.Models.RegisterViewModel
@using okboba.Resources
@{
    ViewBag.Title = "OkBoba - The Premier Dating Site for Smart Singles";
}

<div class="splash-background">
    <div class="splash-container">

        <!-- Navbar -->
        <div class="splash-navbar">
            <a href="/account/login" class="btn btn-default">@Localization.Common_Login</a>
        </div>

        <div class="container" style="margin-top: 100px">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { }))
{
            <!-- Regisration Form: Step 1 -->
            <div id="register-step-1" class="row">
                <div class="col-md-12">
                    <center>
                        <img src="~/Content/images/Logo/okboba-logo-lg-2.png" alt="Alternate Text" style="opacity:0.8;" />
                        <div class="form-inline" style="margin-top: 20px;">
                            <div class="form-group" style="margin-right: 20px;">
                                <label for="Gender" class="">我是： </label>
                                <select class="form-control input-lg" name="Gender" style="width: 200px;">
                                    <option value="F">女</option>
                                    <option value="M">男</option>
                                </select>
                            </div>
                            <div class="form-group" style="margin-right: 20px;">
                                <label for="Birthdate" class="">生日：</label>
                                @*@Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control input-lg" })
                        @Html.ValidationMessageFor(m => m.Birthdate, "", new { @class = "text-danger" })*@
                                <input name="Birthdate" id="Birthdate" class="form-control input-lg" />
                            </div>
                            <button class="btn btn-lg btn-primary" id="NextButton">@Localization.Common_Submit >></button>
                        </div>
                    </center>
                </div> <!-- End column -->
            </div>

            <!-- Regisration Form: Step 2 -->
            <div class="row" id="register-step-2" style="display: none;">
                <div class="col-md-4 col-md-offset-1">
                    <p>只需填写几个字段上手。或者用你最喜欢的社交网络。</p>
                </div>
                <div class="col-md-5">
                    <span class="h3">登记.</span>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="Email" class="col-sm-3 control-label">电子邮件</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                @*<input type="text" name="Email" value=" " class="form-control" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password" class="col-sm-3 control-label">密码</label>
                            <div class="col-sm-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                @*<input type="text" name="Password" value=" " class="form-control" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Name" class="col-sm-3 control-label">名字</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                @*<input type="text" name="Name" value=" " class="form-control" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Location" class="col-sm-3 control-label">城市</label>
                            <div class="col-sm-5">
                                @*@Html.DropDownListFor(m => m.LocationId1, new SelectList(ViewBag.ProvinceList,"Key","Value"))
                            <input type="text" name="LocationId1" value=" " class="form-control" />*@
                                @Html.TextBoxFor(m => m.LocationId1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LocationId1, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.LocationId2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LocationId2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary btn-block btn-lg">加入!</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
}
        </div> <!--End container -->
    </div>
</div>

<!-- Marketing section -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h2>根据您解答问题的网上约会。</h2></center>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            Some text
        </div>
        <div class="col-md-4">
            Some text
        </div>
        <div class="col-md-4">
            some text
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#NextButton').click(function (e) {
            e.preventDefault();

            //Validate the Birthdate field
            if (!$('#Birthdate').valid()) {
                return;
            }

            $('#register-step-1').fadeOut('fast', function (e) {
                $('#register-step-2').fadeIn('fast');
            });
        });

        //$('#Birthdate').datepicker();

        $('#Birthdate').datepicker({
            //endDate: "2000/01/01",
            startView: 2,
            language: "zh-CN",
            orientation: "bottom auto",
            autoclose: true
        });
    </script>
}
