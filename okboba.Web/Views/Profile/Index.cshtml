@using okboba.Resources
@model okboba.Web.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile";
    ViewBag.Section = "Profile";
}

@Html.Action("ProfileHeader", new {profileId = Model.ProfileId, isMe = Model.IsMe, section = i18n.Nav_Profile })

@Html.Action("ProfileDetailAndText", new { profileId = Model.ProfileId, isMe = Model.IsMe })


@section Scripts {

    <script>
        $(function () {
            //Profile text edit
            $('.js-editinplace-editicon').editinplace();

            //Profile detail modals
            $('#detailBasicSection.profile-details-me').click(function () {
                $('#detailBasicModal').modal('show');
            });
            $('#detailLifestyleSection.profile-details-me').click(function () {
                $('#detailLifestyleModal').modal('show');
            });
            $('#detailJobSection.profile-details-me').click(function () {
                $('#detailJobModal').modal('show');
            });
            $('#detailAppearanceSection.profile-details-me').click(function () {
                $('#detailAppearanceModal').modal('show');
            });
            $('#detailPersonalitySection.profile-details-me').click(function () {
                $('#detailPersonalityModal').modal('show');
            });

            //messaging
            messaging.initModule();

            //favorites
            $('[data-toggle="favorite"]').favorite();
        });        
    </script>
}