@using okboba.Resources

<div class="modal fade" tabindex="-1" role="dialog" id="loginModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@i18n.Common_Login</h4>
            </div>
            <div class="modal-body">
                <form method="post" action="/account/login" id="loginForm">
                    <div class="form-group">
                        <input type="email" class="form-control" id="LoginEmail" name="Email" placeholder="@i18n.Login_YourEmail">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="LoginPassword" name="Password" placeholder="@i18n.Login_YourPasswod">
                    </div>
                    <div class="form-group">
                        <a href="~/account/forgotpassword">@i18n.Login_ForgotPassword</a>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">@i18n.Common_Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
