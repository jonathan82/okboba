@model okboba.Web.Models.QuestionIndexViewModel
@using okboba.Resources
@{
    ViewBag.Title = "Questions";
}

@Html.Action("ProfileHeader", "Profile", new { profileId = Model.ProfileId, isMe = Model.IsMe, section = "Questions" })

@Html.Partial("~/Views/Photo/_PhotoUpload.cshtml")

<div class="row">
    <div class="col-md-6">
        <!-- Question box -->
        <div class="question-form">
            <p>你的名字是什么？</p>
            <div class="radio-custom">
                <input type="radio" name="choice" value="choice1" id="c1" />
                <label for="c1">This is a choice</label>
            </div>
            <div class="radio-custom">
                <input type="radio" name="choice" value="choice2" id="c2" />
                <label for="c2">This is a choice</label>
            </div>

            <p class="top-buffer-10">@i18n.Question_Prompt_Acceptable</p>
            <div class="checkbox-custom">
                <input type="checkbox" name="choice" value="choice1" id="cc1" />
                <label for="cc1">This is a choice</label>
            </div>
            <div class="checkbox-custom">
                <input type="checkbox" name="choice" value="choice2" id="cc2" />
                <label for="cc2">This is a choice</label>
            </div>

            <p class="top-buffer-10">@i18n.Question_Prompt_Importance</p>

            <div class="question-importance-box">
                <div class="question-importance-label">@i18n.Question_ALittleImportant</div>
                <div class="question-importance-bar"></div>
            </div>
            <div class="question-importance-box">
                <div class="question-importance-label">@i18n.Question_SomewhatImportant</div>
                <div class="question-importance-bar"></div>
            </div>
            <div class="question-importance-box">
                <div class="question-importance-label">@i18n.Question_VeryImportant</div>
                <div class="question-importance-bar"></div>
            </div>

            <div class="text-right top-buffer-20">
                <button class="btn btn-default">Skip Question</button>
                <button class="btn btn-primary">Answer</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">

        <!-- List all the questions the user answered -->
        @foreach (var ques in Model.MyQuestions)
        {
            <div class="question-answered">
                <p>@ques.Question.Text</p>
                <ul>
                    @foreach (var choice in ques.Choices)
                    {
                        <li>@choice.Text</li>
                    }
                </ul>
                <p>@i18n.Question_Prompt_Acceptable</p>
                <ul>
                    @foreach (var choice in ques.Choices)
                    {
                        <li>@choice.Text</li>
                    }
                </ul>
            </div>
            <hr />
        }

    </div>
</div>

@section Scripts {

    <script>


    </script>
}
