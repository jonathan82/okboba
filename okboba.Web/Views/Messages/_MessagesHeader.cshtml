@using okboba.Resources
@using okboba.Web.Helpers
@model okboba.Web.Models.MessagesHeaderViewModel

<div class="section-header">Messages @(string.IsNullOrEmpty(Model.Subject) ? "" : " - " + Model.Subject)</div>

<ul class="nav nav-tabs">
    @Html.NavTab(Model.Section, i18n.Nav_Messages_Received, "/messages")
    @Html.NavTab(Model.Section, i18n.Nav_Messages_Sent, "/messages/sent")
    @if (Model.Section == i18n.Nav_Messages_Reply)
    {
        @Html.NavTab(Model.Section, i18n.Nav_Messages_Reply, "#")
    }
</ul>
