@using okboba.Resources

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OkBoba - @ViewBag.Title</title>
    @Styles.Render("~/content/css")
</head>
<body class="body-anon">
    
    @if (Request.IsAuthenticated)
    {
        Html.RenderAction("Navbar");
    }
    else
    {
        Html.RenderPartial("_NavbarAnon");
    }    

    <div class="container container-anon">
        @RenderBody()
    </div>

    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/js/vendor")
    @Scripts.Render("~/bundles/js/okboba")

    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            //document ready
            $('#loginModal').login({
                loginErrMsg: '@i18n.Error_GenericLoginError'
            });
        });
    </script>
</body>
</html>
